{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "spaced-comment": "off",
    "no-console": "warn",
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }],
    "arrow-body-style": "off",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "ForOfStatement",
        "message": "For loops should be avoided in favor of array iteration methods."
      },
      {
        "selector": "FunctionDeclaration[generator=true]",
        "message": "Generators require regenerator-runtime, which is too heavyweight for this guide to allow them."
      },
      {
        "selector": "FunctionExpression[generator=true]",
        "message": "Generators require regenerator-runtime, which is too heavyweight for this guide to allow them."
      }
    ]
  }
}
